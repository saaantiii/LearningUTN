<main class="container">
    <div class="login-form text-white" style="background-color:transparent; border: solid white;">
        <form action="/auth" method="POST">
            <h3 class="fw-light">
                Pagina de LOGIN
                <i class="bi bi-person-check"></i>
            </h3>
            <div>
                <label for="text">Usuario</label>
                <input type="text" class="form-control" name="username" id="username" placeholder="Nombre de Usuario">
            </div>
            <div>
                <label for="password">Contraseña</label>
                <input type="password" class="form-control" name="password" id="password" placeholder="**************">
            </div>
            <div id="recuerdame">
                <input class="form-check-input" type="checkbox" name="recuerdame" id="recuerdame">
                <label class="form-check-label" for="recuerdame">Recuerdame</label>
            </div>
            <div>
                <input type="submit" class="btn btn-primary my-buttom" value="Ingresar">
                <a class="btn btn-primary my-buttom" href="/register">Registrarse</a>
            </div>
            <div class="copyright text-white text-secondary">
                © 2021 Copyright
            </div>
        </form>
    </div>
</main>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>

{{#if " alert != 'undefined' " }}
    <script>
        Swal.fire({
            title: '{{alertTitle}}',
            text: '{{alertMessage}}',
            icon: '{{alertIcon}}',
            showConfirmButton: {{showConfirmButton}},
            timer: {{timer}}
        }).then(() => {
                window.location = '/{{ruta}}'
            })
    </script>
{{/if}}