<main class="container">
    <div class="login-form text-white" style="background-color:transparent; border: solid white;">
        <form action="register" method="POST">
            <h3 class="fw-light">
                Pagina de Registro
                <i class="bi bi-person-check"></i>
            </h3>
            <div>
                <label for="name">Nombre</label>
                <input type="text" class="form-control" name="name" id="name" placeholder="" required>
            </div>
            <div>
                <label for="surname">Apellido</label>
                <input type="text" class="form-control" name="surname" id="surname" placeholder="" required>
            </div>
            <div>
                <label for="email">email</label>
                <input type="text" class="form-control" name="email" id="email" placeholder="email@email.com" required>
            </div>
            <div>
                <label for="user">Usuario</label>
                <input type="text" class="form-control" name="username" id="user" placeholder="" required>
            </div>
            <div>
                <label for="password">Contraseña</label>
                <input type="password" class="form-control" name="password" id="email" placeholder="**************" required>
            </div>
            <div id="error"></div>
            <div>
                <input type="submit" class="btn btn-primary my-buttom mt-2" value="Registrarse">
            </div>
            <div class="copyright text-white text-secondary">
                © 2021 Copyright
            </div>
        </form>
    </div>
</main>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>

{{#if " alert != 'undefined' " }}
    <script>
        Swal.fire({
            title: '{{alertTitle}}',
            text: '{{alertMessage}}',
            icon: '{{alertIcon}}',
            showConfirmButton: {{showConfirmButton}},
            timer: {{timer}}
        }).then(() => {
                window.location = '/{{ruta}}'
            })
    </script>
